<%= form_with model: @dream do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
  <%= form.label :date %><br>
  <%= form.text_field :date %>
  </p> 

  <p>
  <%= form.label :description %><br>
  <%= form.text_area :description %>
  </p>

  <p>
  <%= form.label :type_of_dream %><br>
  <%= form.text_field :type_of_dream %>
  </p>

  <%= form.submit 'Add Dream' %>
<% end %>